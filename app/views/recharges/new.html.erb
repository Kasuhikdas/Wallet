<div class="row"><div class="col-md-1"></div>
<div class="col-md-5">
<h1>New Recharge</h1>

<%= render 'form', recharge: @recharge %>


</div>
<div class="col-md-6">
	<ul class="nav nav-tabs">
     <% @operator.each do |u| %>
     
    <li><a data-toggle="tab" href="#<%=u.name %>"><%=u.name %></a></li>
 	<%end%>
 	</ul>
 	
 <div class="tab-content">
    <% @operator.each do |u| %>
    <div id="<%=u.name %>" class="tab-pane fade">
    <table class="table table-fixed">
    <tr class="info">
    	<th>Type</th><th>Description</th><th>Amount</th>
    </tr>
    	   <% @plan.each do |x| %>
                <% if u.id==x.operator_id %>
                
                <tr>
                    <td><%= x.type %></td>
                    <td><%= x.description %></td>
                    <td><%= x.amount %></td>
                </tr>
                    
                <%end%>
           <%end%>
    	   </table>
    </div>
    <%end%>
 
  </div>
</div>
</div>
