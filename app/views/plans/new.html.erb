<div class="row"><div class="col-md-1"></div>
<div class="col-md-4">
<h1>New Plan</h1>

<%= render 'form', plan: @plan %>
</div>
<div class="col-md-6">
<h1>Plans</h1>
	<table class="table">
  <thead>
    <tr class="info">
      <th>Operator</th>
      <th>Amount</th>
      <th>Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr class="active">
        <td><%= plan.operator_id %></td>
        <td><%= plan.amount %></td>
        <td><%= plan.type %></td>
        <td><%= plan.description %></td>
       
        <td><%= link_to 'Destroy', plan,  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
  </div>
</div>
