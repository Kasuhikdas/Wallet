<div class="row"><div class="col-md-1"></div>
<div class="col-md-5">
<h1>New Operator</h1>

<%= render 'form', operator: @operator %>

</div>
<div class="col-md-6">
  <h1>Operators</h1>

<table class="table">
  <thead>
    <tr class="info">
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operators.each do |operator| %>
      <tr class="active">
        <td><%= operator.name %></td>
        <td><%= link_to 'Destroy', operator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>
